(defwindow calendar
  :monitor 0
  :geometry (geometry :x "76%"
                      :y "1%" 
                      :width "270px" 
                      :height "60px")
(cal))

(defwidget cal []
  (box :class "cal-box" :orientation "v"
    (box :orientation "h" 
      (calendar :class "cal" :day calendar_day :month calendar_month :year calendar_year)
    )
  )
)
